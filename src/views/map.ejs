<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>map</title>
    <script src="/javascript/map.js"></script>
    <script type="text/javascript" src="http://maps.google.com/maps/api/js?sensor=false"></script>
    <link rel="stylesheet" href="/css/map.css">
    <script src="http://maps.google.com/maps/api/js?sensor=false"></script>
</head>
<body>
    <div class="input-button-value">
        <input type="button" id="getValues" value="getValues">
        <input type="button" id="changeValues" value="changeValues">
      </div>
      
      <div id="map"></div>
</body>
<script>
    // eslint-disable-next-line
    var stores = '<%- JSON.stringify(stores || []) %>';
    
    document.getElementById('changeValues').onclick = function() {
      map.setOptions({
        center: new google.maps.LatLng(parseFloat(store.latitude),parseFloat(store.longitude)),
        zoom: 20,
        mapTypeId: google.maps.MapTypeId.SATELLITE
      });
    }
    // Sử dụng dữ liệu stores để tạo markers
    if (stores && stores.length > 0) {
        stores.forEach(function(store) {
            if (store.latitude && store.longitude) {
                new google.maps.Marker({
                    position: { lat: parseFloat(store.latitude), lng: parseFloat(store.longitude) },
                    map: map,
                    title: store.name
                });
            }
        });
    } else {
        console.log('Không có dữ liệu cửa hàng');
    }
</script>
</html>